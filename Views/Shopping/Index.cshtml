
@model IEnumerable<Hotel>
@{

    Layout = "~/Views/Shared/_LayoutShopping.cshtml";

}
<div class="container" dir="rtl">

    @foreach (var item in Model)
    {
        <div class="row mt-5">
            <div class="col-md-9">
                <div class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <img src="~/images/@item.Images" class="img-thumbnail" />
                            </div>
                            <div class="col-sm-9">
                                <h1 class="alert alert-primary">@item.Name</h1>
                                <hr />
                                <small>@item.Address</small>
                                <hr>
                               
                                <a asp-action="Rooms" asp-route-id="@item.Id" class="btn btn-success">حجز</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
            </div>
        </div>

    }

</div>