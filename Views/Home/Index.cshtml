@model IEnumerable<Hotel>
@{
    ViewData["Title"] = "Home Page";
    
    
}
    
   
}
<div class="container" dir="rtl">
    <div class="row">

        <form asp-controller="Home" asp-action="CreatNewRecord" method="post">
            <div class=" row">
                <div class=" col ">
                    <label for="Name">اسم الفندق </label>
                    <input type="text" id="Name" name="Name" class=" form-control form-control-sm" />
                </div>
            </div>


            <div class=" row">
                <div class=" col-sm-6 ">
                    <label for="Address">عنوان الفندق </label>
                    <input type="text" id="Address" name="Address" class=" form-control form-control-sm" />
                    
                    <div class=" col-sm-6 ">
                        <label for="City">اسم المدينة </label>
                            <input type="text" id="City" name="City" class=" form-control form-control-sm" />
                </div>
            </div>

                <div class=" row">
                    <div class=" col-sm-6 ">
                        <label for="Emile"> البريد الالكتروني</label>
                        <input type="text" id="Emile" name="Emile" class=" form-control form-control-sm" />
                        
                        </div>
                        <div class=" col-sm-6 ">
                        <label for="Phone"> رقم الجوال </label>
                                <input type="text" id="Phone" name="Phone" class=" form-control form-control-sm" />
                           
                        </div>
                    </div>

                    <div class=" row">
                    <div class=" col-sm ">
                        <label for="Images">  الصورة</label>
                            <input type="text" id="Images" name="Images" class=" form-control form-control-sm" />
                       
                        </div>
                    </div>

            <div class=" row ">
                <div class="col text-center">
                        <label for="Images">
                        <button class=" btn btn-success" type="submit">حفظ</button>
                    </label>
                </div>
                     
                <div class="row">
                    <div class="col-sm-3 mr-10">
                            
                            <button type="submit" class="btn btn-primary"> ابحث عن فندق</button>

                            <input type="text" class="form-control form-control-sm" name="Search" />

                        </div>
            </div>
           
        </form>

<table class=" table table-bordered mt-5">
    <thead>
        <tr class="text-center">
            <th>رقم الفندق</th>
            <th>اسم الفندق</th>
            <th>عنوان الفندق</th>
            <th>المدينة</th>
            <th>رقم الهاتف</th>
            <th>البريد الالكتروني</th>
            <th colspan="2">اجراء</th>
        </tr>
    </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr class=" text-center">
                            <td>@item.Id</td>
                            <td>@item.Name</td>
                            <td>@item.Address</td>
                            <td>@item.City</td>
                            <td>@item.Phone</td>
                            <td>@item.Emile</td>
                            <td> <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash text-danger"></i></a></td>
                            <td> <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit text-success"></i></a></td>



                        </tr>
                    }

         
           
            </tbody>
            
</table>

</div>

